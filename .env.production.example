# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production to version control!

# Environment
NODE_ENV=production

# Server
PORT=3000

# Database - MongoDB (Production with Replica Set)
# Use connection string with proper options for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/boostme?retryWrites=true&w=majority&maxPoolSize=100&minPoolSize=10&serverSelectionTimeoutMS=5000&socketTimeoutMS=45000

# JWT Configuration
# IMPORTANT: Generate strong secrets using: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_64_CHARS_MIN
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_STRONG_SECRET_64_CHARS_MIN
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
API_PREFIX=api
API_VERSION=v1

# AWS S3 Configuration
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=boostme-production
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Video Processing
VIDEO_CHUNK_DURATION=4
VIDEO_QUALITIES=360p,720p,1080p

# Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Redis Configuration (Production with Sentinel/Cluster)
REDIS_HOST=redis-production.yourdomain.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DB=0

# Redis Connection Pool
REDIS_MAX_CONNECTIONS=20
REDIS_MIN_CONNECTIONS=5

# BullMQ Configuration
BULL_REDIS_HOST=redis-queue.yourdomain.com
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=YOUR_BULL_REDIS_PASSWORD

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
THROTTLE_AUTH_LIMIT=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Application Monitoring (Optional - Add your providers)
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
# DATADOG_API_KEY=your-datadog-key

# Health Check
HEALTH_CHECK_ENABLED=true

# Payment Processing
MINIMUM_PAYOUT_AMOUNT=20
PAYOUT_SCHEDULE_CRON=0 9 * * 1

# Security
MAX_REQUEST_SIZE=50mb
BCRYPT_ROUNDS=12
