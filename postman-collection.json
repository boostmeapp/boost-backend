    {
      "name": "Boost Payment & Purchase",
      "item": [
        {
          "name": "1. Create Boost Payment Intent",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('payment_intent_id', response.paymentIntentId);",
                  "    console.log('Payment Intent ID:', response.paymentIntentId);",
                  "    console.log('Client Secret:', response.clientSecret);",
                  "    console.log('');",
                  "    console.log('⚠️ NEXT STEP: Complete payment in Stripe (use test card: 4242 4242 4242 4242)');",
                  "    console.log('Then call \"2. Confirm Boost Payment\" endpoint');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"videoId\": \"{{video_id}}\",\n  \"amount\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/boost/create-intent",
              "host": ["{{base_url}}"],
              "path": ["payment", "boost", "create-intent"]
            },
            "description": "Creates a Stripe payment intent for boosting a video. Amount is in EUR (€1-€100)."
          }
        },
        {
          "name": "2. Confirm Boost Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    console.log('Payment confirmed!');",
                  "    console.log('Video ID:', response.videoId);",
                  "    console.log('');",
                  "    console.log('⚠️ NEXT STEP: Call \"3. Create Boost\" endpoint to activate the boost');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentIntentId\": \"{{payment_intent_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/boost/confirm",
              "host": ["{{base_url}}"],
              "path": ["payment", "boost", "confirm"]
            },
            "description": "Confirms the boost payment was successful. Call this after Stripe confirms payment."
          }
        },
        {
          "name": "3. Create Boost (After Payment)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const boost = pm.response.json();",
                  "    pm.collectionVariables.set('boost_id', boost._id);",
                  "    console.log('Boost ID:', boost._id);",
                  "    console.log('Status:', boost.status);",
                  "    console.log('Amount:', '€' + boost.amount);",
                  "    console.log('Target Views:', boost.targetViews);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"videoId\": \"{{video_id}}\",\n  \"amount\": 10,\n  \"stripePaymentIntentId\": \"{{payment_intent_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/boosts",
              "host": ["{{base_url}}"],
              "path": ["boosts"]
            },
            "description": "Creates the boost after successful payment. This activates the boost and reward pool."
          }
        },
